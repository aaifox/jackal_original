<?xml version="1.0"?>
<robot name="jackal" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- This file is a placeholder which is included by default from
       jackal.urdf.xacro. If a robot is being customized and requires
       additional URDF, set the JACKAL_URDF_EXTRAS environment variable
       to the full path of the file you would like included. -->
  
  <xacro:property name="arm_l" value="0.532" />
  <xacro:property name="arm_w" value="0.416" />
  <xacro:property name="arm_h" value="0.308" />
  
   <joint name="chassis_arm_joint" type="fixed">
      <parent link="chassis_link"/>
      <child link="arm_link" />
      <axis xyz="0 0 1" />
   </joint>

  <link name="arm_link">
    <visual>
      <origin xyz="0.02 0 ${chassis_height+arm_h/2}" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://jackal_description/meshes/full_arm.stl"/>
      </geometry>
      <material name="dark_grey" />
    </visual>
    <collision>
      <origin xyz="0 0 ${arm_h/2}"/>
      <geometry>
        <box size="${arm_l} ${arm_w} ${arm_h}"/>
      </geometry>
    </collision>
    <inertial>
      <!-- Center of mass -->
      <origin xyz="0.012  0.002 0.067" rpy="0 0 0"/>
      <mass value="2.0"/>
      <!-- Moments of inertia: -->
      <inertia
        ixx="0.0" ixy="-0.0000" ixz="0.00"
        iyy="0.0" iyz="-0.0000" izz="0.0"/>
      </inertial>
  </link>
</robot>
